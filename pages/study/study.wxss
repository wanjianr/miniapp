/* 整体页面容器，背景渐变色 */
.study-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 20rpx;
    background: linear-gradient(to bottom, #eef5ff, #d2e3fc);
    min-height: 100vh;
  }
  
  /* 模式选择区域 */
  .mode-selector {
    width: 100%;
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 0 10rpx;
  }
  
  .radio-label {
    margin-right: 10rpx;
    font-size: 28rpx;
    color: #333;
  }
  
  .switch-container {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #333;
  }
  
/* 内容展示区域 */
.content-area {
     /* flex: 1; 弹性盒子布局中的伸缩比例，使该区域占据剩余空间 */
    height: 600rpx;
    width: 90%; /* 宽度为父元素宽度的 90% */
    background-color: #fff; /* 背景颜色为白色 */
    border-radius: 10rpx; /* 圆角半径为 10rpx */
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1); /* 阴影效果，水平偏移 0，垂直偏移 4rpx，模糊半径 12rpx，颜色为 rgba(0, 0, 0, 0.1) */
    padding: 30rpx; /* 内边距为 30rpx */
    text-align: left; /* 文本左对齐 */
    margin-bottom: 30rpx; /* 下外边距为 30rpx */
  }
  
  /* 行间距统一 */
  .line {
    margin-bottom: 15rpx;
  }
  
  /* 单词、音标、释义、例句样式 */
  .word {
    font-size: 60rpx;
    font-weight: bold;
    color: #333;
    text-align: center;
    font-family: Georgia, "Times New Roman", serif; /* 优雅字体 */
  }
  
  .pronunciation {
    font-size: 45rpx;
    color: rgb(119, 36, 36);
    text-align: center;
    font-family: Georgia, "Times New Roman", serif; /* 优雅字体 */
  }
  
  .definition {
    font-size: 36rpx;
    color: rgb(163, 162, 162);
    text-align: center;
  }
  
  .example-sentence {
    font-size: 43rpx; /* 字体大小 */
    color: rgb(50, 50, 50); /* 柔和的深灰色 */
    text-align: left; /* 左对齐 */
    font-style: italic; /* 设置斜体 */
    font-family: Georgia, "Times New Roman", serif; /* 优雅字体 */
    line-height: 1.6; /* 增加行高 */
    letter-spacing: 1px; /* 增加字间距 */
    text-shadow: 0.5px 0.5px 2px rgba(0, 0, 0, 0.1); /* 轻微阴影 */
}

  .example-translation {
    font-size: 35rpx;
    color: rgb(163, 162, 162);
    text-align: left;
    margin-top: 10rpx;
  }
  
  /* 无复习单词提示 */
  .no-word {
    font-size: 28rpx;
    color: #888;
    text-align: center;
  }
  
  /* 操作按钮区域 */
  .action-buttons {
    width: 90%;
    display: flex;
    justify-content: space-between;
    gap: 10rpx;
  }

    /* 调整顺序按钮样式 */
.reorder-button {
    width: 90%;
    display: flex;
    justify-content: space-between;
    gap: 10rpx;
    position: relative; /* 相对定位 */
    top: 350rpx; /* 向下调整按钮位置 */
  }
  
  button {
    width: 45%;
    font-size: 32rpx;
    padding: 20rpx;
    border-radius: 12rpx;
    border: none;
  }
  
  .mastered {
    background-color: #4CAF50;
    color: #fff;
  }
  
  .proficient {
    background-color: #0e0c0d;
    color: #fff;
  }

  .not-mastered {
    background-color: #FF5722;
    color: #fff;
  }
  
/* 模式选择区域整体样式 */
.mode-selector {
    width: 100%;
    padding: 10rpx;
    background-color: #f8f9fa;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  }
  
  /* Tab 容器：水平排列 */
  .tab-container {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 10rpx;
  }
  
  /* 每个 Tab 按钮样式 */
  .tab-item {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;  /* 增加内边距使按钮更大 */
    margin: 0 5rpx;
    font-size: 22rpx;    /* 调整字体大小 */
    color: #333;
    background-color: #e0e0e0;
    border-radius: 8rpx;
    transition: background-color 0.2s, color 0.2s;
  }
  
  /* 激活状态的 Tab */
  .tab-item.active {
    background-color: #007aff;
    color: #fff;
  }
  
/* 自定义切换按钮样式 */
.custom-switch {
    width: 260rpx;          /* 调整按钮宽度 */
    height: 260rpx;          /* 调整按钮高度 */
    background-color: #e0e0e0; /* 关闭状态背景色 */
    border-radius: 15rpx;    /* 圆角效果 */
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: -20rpx;
    border-radius: 50%; /* 圆形关键，50% 表示完全圆形 */
    transition: all 0.3s; /* 平滑过渡效果 */  }
  
  /* 开启状态的切换按钮 */
  .custom-switch.active {
    background-color: #063d3f; /* 开启状态背景色 */
  }
  
  /* 切换按钮内部文字样式 */
  .switch-text {
    font-size: 30rpx;       /* 调整文字大小 */
    color: #333;            /* 关闭状态文字颜色 */
    transition: color 0.2s;
  }
  
  /* 当按钮处于 active 状态时，文字颜色调整为白色 */
  .custom-switch.active .switch-text {
    color: #fff;
  }

  /* 切换按钮容器，居中显示 */
.switch-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;   /* 居中排列 */
    margin-top: -55rpx;          /* 根据需要调整与上面内容的间距 */
  }

  