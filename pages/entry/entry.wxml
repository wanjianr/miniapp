<view class="container">
  <form bindsubmit="onSubmit">
    <view class="form-item">
      <text>单词</text>
      <input name="word" placeholder="请输入单词" required />
    </view>
    <view class="form-item">
      <text>词性</text>
      <input name="part_of_speech" placeholder="如：adj." />
    </view>
    <view class="form-item">
      <text>音标</text>
      <input name="phonetic" placeholder="如：/əˈbʌndənt/" />
    </view>
    <view class="form-item">
      <text>中文释义</text>
      <input name="translation" placeholder="请输入中文释义" />
    </view>
    <view class="form-item">
      <text>例句</text>
      <input name="example_sentence" placeholder="请输入例句" />
    </view>
    <view class="form-item">
      <text>例句中文</text>
      <input name="example_translation" placeholder="请输入例句翻译" />
    </view>
    <button formType="submit">录入单词</button>
  </form>
</view>
