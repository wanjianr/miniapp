.container {
    padding: 20px;
  }
  
  .header {
    text-align: center;
    font-size: 24px;
    margin-bottom: 20px;
  }
  
  .options {
    margin-bottom: 20px;
  }
  
  .radio-group {
    display: flex;
    justify-content: space-around;
  }
  
  .radio {
    display: flex;
    align-items: center;
  }
  
  .upload {
    text-align: center;
    margin-bottom: 20px;
  }
  
  .content {
    margin-top: 20px;
  }
  
  .word, .sentence {
    margin-bottom: 10px;
  }
  
  .word-text {
    font-size: 20px;
    font-weight: bold;
  }
  
  .phonetic, .translation, .example-sentence, .example-translation {
    font-size: 16px;
  }
  
  .actions {
    text-align: center;
    margin-top: 20px;
  }
  
  .progress {
    text-align: center;
    margin-top: 20px;
  }