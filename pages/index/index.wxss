.container {
    padding: 20px;
    font-family: Arial, sans-serif;
}
  
.header {
    text-align: center;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
}
  
.settings {
    margin-bottom: 20px;
}
  
.setting-item {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}
  
.options {
    margin-bottom: 20px;
}
  
.radio-group {
    display: flex;
    justify-content: space-around;
}
  
.radio {
    display: flex;
    align-items: center;
}
  
.upload {
    text-align: center;
    margin-bottom: 20px;
}
  
.content {
    margin-top: 20px;
}
  
.word, .sentence {
    margin-bottom: 10px;
}
  
.word-text {
    font-size: 22px;
    font-weight: bold;
    color: #444;
}
  
.phonetic, .translation, .example-sentence, .example-translation {
    font-size: 18px;
    color: #666;
}
  
.actions {
    text-align: center;
    margin-top: 20px;
}
  
.progress {
    text-align: center;
    margin-top: 20px;
    font-size: 16px;
    color: #888;
}