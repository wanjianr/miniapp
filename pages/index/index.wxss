.container {
    padding: 20px;
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
}
  
.header {
    text-align: center;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
}
  
.settings {
    margin-bottom: 20px;
    padding: 10px;
    background-color: #ffffff;
    border-radius: 8px;
}
  
.setting-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
}
  
.options {
    margin-bottom: 20px;
    padding: 10px;
    background-color: #ffffff;
    border-radius: 8px;
}
  
.radio-group {
    display: flex;
    justify-content: space-around;
}
  
.radio {
    display: flex;
    align-items: center;
}
  
.upload {
    text-align: center;
    margin-bottom: 20px;
    padding: 10px;
    background-color: #ffffff;
    border-radius: 8px;
}
  
.content {
    margin-top: 20px;
    padding: 10px;
    background-color: #ffffff;
    border-radius: 8px;
}
  
.word, .sentence {
    margin-bottom: 10px;
}
  
.word-text {
    font-size: 26px;
    font-weight: bold;
    color: #444;
    margin-bottom: 5px;
}
  
.phonetic {
    font-size: 18px;
    color: #666;
    margin-bottom: 5px;
}
  
.translation, .example-sentence, .example-translation {
    font-size: 18px;
    color: #666;
}
  
.actions {
    text-align: center;
    margin-top: 20px;
}
  
.action-button {
    display: inline-block;
    padding: 10px 20px;
    margin: 5px;
    font-size: 16px;
    color: #ffffff;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    text-align: center;
    cursor: pointer;
}

.action-button:hover {
    background-color: #0056b3;
}

.progress {
    text-align: center;
    margin-top: 20px;
    font-size: 16px;
    color: #888;
}