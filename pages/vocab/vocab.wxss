.container {
    padding: 8px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    background-color: #f9f9f9;
  }
  
  .header {
    padding: 8px;
    text-align: center;
    background-color: #0081ff;
    color: #fff;
    border-radius: 4px;
    margin-bottom: 8px;
  }
  
  .title {
    font-size: 16px;
    font-weight: bold;
  }
  
  .list {
    margin: 0;
    padding: 0;
  }
  
  .list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 6px 8px;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .list-item.mastered {
    background-color: #e8f5e9;
  }
  
  .left-part {
    display: flex;
    align-items: center;
    flex: 0 0 120px;  /* 固定宽度保证左侧对齐 */
  }
  
  .index {
    margin-right: 4px;
    font-size: 13px;
    color: #333;
  }
  
  .word {
    width: 200rpx;  /* 固定宽度，防止内容变动时影响对齐 */
    font-weight: bold;
    flex-shrink: 0;
  }

  .mid-part {
    flex: 1;
    padding: 0 8px;
    font-size: 12px;
    color: #555;
  }
  
  .right-part {
    display: flex;
    align-items: center;
    flex: 0 0 auto;
    gap: 8px;
  }
  
  .detail-btn {
    font-size: 12px;
    padding: 4px 6px;
    background-color: #f0ad4e;
    color: #fff;
    border: none;
    border-radius: 3px;
  }
  
  .toggle-btn {
    font-size: 12px;
    padding: 4px 6px;
    background-color: #0081ff;
    color: #fff;
    border: none;
    border-radius: 3px;
  }
  
  .details {
    width: 100%;
    padding: 6px 12px;
    font-size: 12px;
    color: #555;
    background-color: #fafafa;
    border-left: 2px solid #0081ff;
    margin-top: 2px;
  }
  
  .detail-line {
    margin-bottom: 2px;
  }
  