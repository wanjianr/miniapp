.container {
    padding: 8px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    background-color: #f9f9f9;
  }
  
  .header {
    padding: 8px;
    text-align: center;
    background-color: #0081ff;
    color: #fff;
    border-radius: 4px;
    margin-bottom: 8px;
  }
  
  .title {
    font-size: 16px;
    font-weight: bold;
  }
  
  .list {
    margin: 0;
    padding: 0;
  }
  
  .list-item {
    padding: 6px 8px;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .list-item:last-child {
    border-bottom: none;
  }
  
  /* 仅对已掌握的单词标记背景 */
  .list-item.mastered {
    background-color: #e8f5e9;
  }
  
  /* 行容器 */
  .row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  /* 左侧区域：序号和单词 */
  .left-part {
    display: flex;
    align-items: center;
    flex: 0 0 auto;
  }
  
  .index {
    margin-right: 4px;
    font-size: 13px;
    color: #333;
  }
  
  .word {
    font-size: 14px;
    font-weight: bold;
    color: #333;
  }
  
  /* 中间区域：中文释义 */
  .mid-part {
    flex: 1;
    padding: 0 8px;
    font-size: 12px;
    color: #555;
    text-align: left;
  }
  
  /* 右侧区域：按钮组 */
  .right-part {
    display: flex;
    align-items: center;
    flex: 0 0 auto;
    gap: 8px;
  }
  
  .detail-btn {
    font-size: 12px;
    padding: 4px 6px;
    background-color: #f0ad4e;
    color: #fff;
    border: none;
    border-radius: 3px;
  }
  
  .toggle-btn {
    font-size: 12px;
    padding: 4px 6px;
    background-color: #0081ff;
    color: #fff;
    border: none;
    border-radius: 3px;
  }
  
  /* 展开详情区域 */
  .details {
    padding: 4px 12px;
    font-size: 12px;
    color: #555;
    background-color: #fafafa;
    border-left: 2px solid #0081ff;
    margin-bottom: 4px;
  }
  
  .detail-line {
    margin-bottom: 2px;
  }
  